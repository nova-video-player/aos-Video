<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/media_flags_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/media_type"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/transparent_ripple"
        android:scaleType="centerInside"/>

    <ImageView
        android:id="@+id/video_codec"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/transparent_ripple"
        android:scaleType="centerInside"/>

    <ImageView
        android:id="@+id/video_resolution"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/transparent_ripple"
        android:scaleType="centerInside"/>

    <ImageView
        android:id="@+id/audio_codec"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/transparent_ripple"
        android:scaleType="centerInside"/>

    <ImageView
        android:id="@+id/audio_channels"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/transparent_ripple"
        android:scaleType="centerInside"/>

    <ImageView
        android:id="@+id/flag_3d"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/transparent_ripple"
        android:scaleType="centerInside"/>

    <ImageView
        android:id="@+id/color_depth"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/transparent_ripple"
        android:scaleType="centerInside"/>

    <ImageView
        android:id="@+id/color_range"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/transparent_ripple"
        android:scaleType="centerInside"/>

</LinearLayout>