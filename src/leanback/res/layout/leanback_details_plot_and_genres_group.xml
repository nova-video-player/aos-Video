<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dip"
    android:layout_marginEnd="48dip"
    android:layout_marginStart="48dip"
    android:layout_marginTop="4dip"
    android:orientation="vertical">

    <TextView
        android:id="@+id/plot"
        style="@style/TextAppearance.Leanback.DetailsDescriptionSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:singleLine="false"
        />

    <RelativeLayout
      android:id="@+id/genres_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="left" >

      <TextView
          android:id="@+id/genres_title"
          style="@style/TextAppearance.Leanback.DetailsDescriptionSubtitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="12dip"
          android:textColor="@color/lb_details_description_body_color"
          android:text="@string/scrap_genre_title"
          />

      <TextView
          android:id="@+id/genres"
          style="@style/TextAppearance.Leanback.DetailsDescriptionSubtitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="4dip"
          android:layout_marginTop="12dip"
          android:layout_toRightOf="@id/genres_title"
          android:singleLine="false"
          android:textColor="@color/lb_details_description_body_color"
          />
    </RelativeLayout>
</LinearLayout>
