<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dip"
        android:layout_marginBottom="4dip"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dip" />

        <TextView
            android:id="@+id/integrated_subtitles_label"
            style="@style/TextAppearance.Leanback.DetailsActionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/leanback_subtitles_integrated"/>

        <TableRow
            android:id="@+id/integrated_subtitles_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:layout_marginBottom="12dip">
            <TextView
                android:id="@+id/integrated_subtitles_values_col1"
                style="@style/TextAppearance.Leanback.DetailsDescriptionBody"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/integrated_subtitles_values_col2"
                style="@style/TextAppearance.Leanback.DetailsDescriptionBody"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
        </TableRow>

        <TextView
            android:id="@+id/external_subtitles_label"
            style="@style/TextAppearance.Leanback.DetailsActionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/leanback_subtitles_external"/>

        <TableRow
            android:id="@+id/external_subtitles_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:layout_marginBottom="12dip">
            <TextView
                android:id="@+id/external_subtitles_values_col1"
                style="@style/TextAppearance.Leanback.DetailsDescriptionBody"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/external_subtitles_values_col2"
                style="@style/TextAppearance.Leanback.DetailsDescriptionBody"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
        </TableRow>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left" >

            <Button
                android:id="@+id/action_get_online_subtitles"
                style="?attr/detailsActionButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/lb_action_1_line_height"
                android:layout_marginTop="4dip"
                android:layout_marginBottom="4dip"
                android:lines="1"
                android:text="@string/get_subtitles_online"/>

            <Button
                android:id="@+id/action_choose_subtitles"
                style="?attr/detailsActionButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/lb_action_1_line_height"
                android:layout_marginLeft="16dip"
                android:layout_marginTop="4dip"
                android:layout_marginBottom="4dip"
                android:layout_toRightOf="@id/action_get_online_subtitles"
                android:lines="1"
                android:text="@string/get_subtitles_on_drive"/>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
